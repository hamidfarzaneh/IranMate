<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/user_logo_imageButton"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_user_s"
        android:background="#01ffffff" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/post_imageButton"
        android:layout_below="@+id/user_logo_imageButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/like_imageButton"
        android:layout_below="@+id/post_imageButton"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_like"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/comment_imageButton"
        android:layout_alignTop="@+id/like_imageButton"
        android:layout_toEndOf="@+id/like_imageButton"
        android:background="#00ffffff"
        android:src="@drawable/ic_comment" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/little_post_discription"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/comment_imageButton"
        android:layout_alignParentLeft="true"
        android:text="little discription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/username_post_text"
        android:layout_above="@+id/post_imageButton"
        android:layout_toEndOf="@+id/user_logo_imageButton"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:paddingTop="10dp" />

</RelativeLayout>
